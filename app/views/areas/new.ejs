<% layout('layouts/boilerplate')%>
    <div class="row">
      <%- include('../partials/title.ejs', { title: 'Nova Area' }) %>

        <p></p>
        <p></p>
        <div class="col-6 offset-3">
            <form action="/areas" method="POST"  class="validated-form">

                <div class="mb-3">
                    <% if(autoclose) { %>
                        <input type="text" id="autoclose" name="area[autoclose]" value="true" hidden>
                    <% } %>
                    <label class="form-label" for="nom">Nom Àrea</label>
                    <input class="form-control" type="text" id="nom" name="area[nom]" required>
                    <div class="valid-feedback">Sembla correcte!</div>
                </div>

                

                <div class="mb-3">
                    <button class="btn btn-success">Afegeix Area</button>
                </div>
            </form>
            <a href="/areas">Totes les Àrees</a>
        </div>
    </div>
