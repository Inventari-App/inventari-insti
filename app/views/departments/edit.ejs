<% layout('layouts/boilerplate')%>


<div class="row">
  <div class="col-6 offset-3">

    <%- include('../partials/title.ejs', { title: 'Editar Departament' }) %>

    <form
      action="/departments/<%=department._id%>?_method=PUT"
      method="POST"
      class="validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="nom">Nom Department</label>
        <input
          class="form-control"
          type="text"
          id="nom"
          name="nom"
          value="<%=department.nom %>"
          required
        />
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Modifica department</button>
      </div>
    </form>
    <a href="/departments">Tots els Departments</a>
  </div>
</div>
