<% layout('layouts/boilerplate')%>

<div class="row">
  <h1 class="text-center">Editar department</h1>
  <div class="col-6 offset-3">
    <form
      action="/departments/<%=department._id%>?_method=PUT"
      method="POST"
      class="validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="name">Nom Department</label>
        <input
          class="form-control"
          type="text"
          id="name"
          name="department[name]"
          value="<%=department.name %>"
          required
        />
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Modifica department</button>
      </div>
    </form>
    <a href="/departments">Tots els Departments</a>
  </div>
</div>
