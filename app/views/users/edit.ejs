<% layout('layouts/boilerplate')%>

<div class="row">
  <div class="col-6 offset-3">
    <%- include('../partials/title.ejs', { title: 'Editar User' }) %>

    <form
      action="/users/<%=user._id%>?_method=PUT"
      method="POST"
      class="validated-form"
    >
      <div class="mb-3">
        <label for="centerName" class="form-label">Nom del Centre</label>
        <input
          type="text"
          class="form-control"
          id="centerName"
          name="centerName"
          placeholder="Introdueix el nom del centre (e.g. IES Sant Joan)"
          required
          disabled
          value="<%= center.name %>"
        />
      </div>
      <div class="mb-3">
        <label for="email">Email</label>
        <input
          class="form-control"
          type="email"
          id="email"
          name="user[email]"
          value="<%= user.email %>"
          required
          disabled
        />
      </div>
      <div class="mb-3">
        <label for="password">New Password</label>
        <input
          class="form-control"
          type="password"
          id="password"
          name="user[password]"
          value="<%=user.password %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="old-password">Old Password</label>
        <input
          class="form-control"
          type="password"
          value="12345678"
          disabled
        />
      </div>
      <div class="mb-3">
        <label for="name">Nom</label>
        <input
          class="form-control"
          type="text"
          id="name"
          name="user[name]"
          value="<%=user.name %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="surname">Cognoms</label>
        <input
          class="form-control"
          type="text"
          id="surname"
          name="user[surname]"
          value="<%=user.surname %>"
          required
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="department">Departament</label>
        <select class="form-select" name="user[department]" id="department">
          <% departments.forEach((department) => { %>
            <% const selected = department.id.trim() == user.department ? "selected" : "" %>
            <option value="<%= department._id %>" <%= selected %> >
              <%= department.nom %>
            </option>
          <% }) %>
        </select>
        <a href= "/departments/new?tab=true" class="create-link" target="parent">Crear department</a>
      </div>

      <div class="mb-3">
        <label for="admin">Is Admin</label>
        <input id="admin" name="user[isAdmin]" class="" type="checkbox" id="admin-checkbox" <%= user.isAdmin &&
        'checked' %> />
      </div>
      <div class="mb-3">
        <button class="btn btn-primary" type="submit">Actualitzar User</button>
      </div>
    </form>
    <a href="/users/<%= user._id%>">Tornar a l'User</a>
  </div>
</div>

<script>
  const adminCheckboxEl = document.querySelector("#admin-checkbox");
  const adminEl = document.querySelector("#admin");
  adminCheckboxEl.addEventListener("change", (e) => {
    const { currentTarget } = e;
    adminEl.value = currentTarget.checked;
  });
</script>
