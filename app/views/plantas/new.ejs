<% layout('layouts/boilerplate')%>
    <div class="row">
        <%- include('../partials/title.ejs', { title: 'Nova Planta' }) %>

        <p></p>
        <p></p>
        <div class="col-6 offset-3">
            <form action="/plantas" method="POST"  class="validated-form">

                <div class="mb-3">
                    <% if(autoclose) { %>
                        <input type="text" id="autoclose" name="autoclose" value="true" hidden>
                    <% } %>
                    <label class="form-label" for="nom">Nom Planta</label>
                    <input class="form-control" type="text" id="nom" name="nom" required>
                    <div class="valid-feedback">Sembla correcte!</div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Afegeix Planta</button>
                </div>
            </form>
            <a href="/plantas">Totes les Plantes</a>
        </div>
    </div>
