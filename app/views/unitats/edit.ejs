<% layout('layouts/boilerplate')%>

<div class="row">
  <%- include('../partials/title.ejs', { title: 'Editar Unitat' }) %>

  <div class="col-6 offset-3">
    <form
      action="/unitats/<%=unitat._id%>?_method=PUT"
      method="POST"
      class="validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="nom">Nom Unitat</label>
        <input
          class="form-control"
          type="text"
          id="nom"
          name="nom"
          value="<%=unitat.nom %>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="planta">Planta</label>
        <input
          class="form-control"
          type="text"
          id="planta"
          name="planta"
          required
          value="<%= unitat.planta%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="area">Area</label>
        <input
          class="form-control"
          type="text"
          id="area"
          name="area"
          required
          value="<%= unitat.area%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="zona">Zona</label>
        <input
          class="form-control"
          type="text"
          id="zona"
          name="zona"
          required
          value="<%= unitat.zona%>"
        />
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Modifica unitat</button>
      </div>
    </form>
    <a href="/unitats">Totes els Unitats</a>
  </div>
</div>
