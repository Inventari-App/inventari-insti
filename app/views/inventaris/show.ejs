<% layout('layouts/boilerplate')%>

<%- include('../partials/detail', {
    type: 'inventari',
    item: inventari,
    features:
    {
        departament: inventari.department,
        unitat: inventari.unitat,
        'preu de cost': inventari.preu,
        iva: inventari.iva,
        'num serie': inventari.numSerie
    }
}) %>

<script>
  document.getElementById('deleteForm').addEventListener('submit', function(event) {
    if (!confirm('Are you sure you want to delete this inventari?')) {
      event.preventDefault(); // Prevent form submission if user clicks "Cancel"
    }
  });
</script>
