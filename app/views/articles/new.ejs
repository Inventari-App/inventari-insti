<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Nou article</h1>
  <div class="col-6 offset-3">
    <form action="/articles" method="POST" class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="nom">Nom Article</label>
        <input
          class="form-control"
          type="text"
          id="nom"
          name="article[article]"
          required
        />
        <div class="valid-feedback">Sembla correcte!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="unitat">Unitat</label>
        <select class="form-select" name="article[unitat]" id="department">
          <% unitats.forEach((unitat) => { %>
            <option value="<%= unitat._id %>" >
              <%= unitat.nom %>
            </option>
          <% }) %>
        </select>
        <a href= "/unitats/new?tab=true" class="create-link" target="parent">Crear unitat</a>
      </div>

      <div class="mb-3">
        <label class="form-label" for="imatge">Imatge Url</label>
        <input
          class="form-control"
          type="text"
          id="imatge"
          name="article[imatge]"
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="preu">Preu de cost</label>
        <div class="input-group">
          <span class="input-group-text" id="preu-label">€</span>
          <input
            type="number"
            min="0"
            step="0.01"
            class="form-control"
            name="article[preu]"
            id="preu"
            placeholder="0.00"
            aria-label="preu"
            aria-describedby="preu-label"
            required
          />
          <div class="valid-feedback">Sembla correcte!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="descripcio">Descripció</label>
        <textarea
          class="form-control"
          type="text"
          id="descripcio"
          name="article[descripcio]"
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Afegeix Article</button>
      </div>
    </form>
    <a href="/articles">Tots els Articles</a>
  </div>
</div>
